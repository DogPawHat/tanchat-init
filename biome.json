{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["src/routeTree.gen.ts", "convex/_generated/*"],
		"include": [
			"src/*",
			"convex/*",
			".vscode/*",
			"index.html",
			"vite.config.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": false
	},
	"javascript": {
		"formatter": {
			"lineWidth": 80,
			"semicolons": "always",
			"quoteStyle": "double"
		}
	}
}
